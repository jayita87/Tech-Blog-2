<div class="row mt-4">
  <div class="col-md-6">
    <h2>Update Blog Post:</h2>

    <form class="form update-post-form mb-3" data-id="{{id}}">
      <div class="form-group">
        <label class="mb-3 pr-2" for="title">Title:</label>
        <input class="form-input" type="text" id="title" name="title" value="{{title}}"/>
      </div>
      <div class="form-group">
        <label for="article">Blog Post:</label>
        <input value="{{contents}}" class="form-input" id="article" name="article"></input>
      </div>
      <div class="form-group mt-3">
        <button type="submit" class="btn btn-secondary">Confirm Changes</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/update.js"></script>