<div class="row">
  <div class="col-auto">
    <h2>Hello, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h2>Author a New Blog Post:</h2>

    <form class="form new-post-form mb-3">
      <div class="form-group">
        <label class="mb-3 pr-2" for="title">Title:</label>
        <input class="form-input" type="text" id="title" name="title" />
      </div>
      <div class="form-group">
        <label for="article">Blog Post:</label>
        <textarea class="form-input" id="article" name="article"></textarea>
      </div>
      <div class="form-group mt-3">
        <button type="submit" class="btn btn-secondary">Create</button>
      </div>
    </form>
  </div>
</div>

<div class="row">
  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h4>Current Blog Posts:</h4>

    {{#each posts as |post|}}
    <div class="row mb-2 post_comments">
      <div class="col-md-8">
        <h4><a href="/update/{{post.id}}" class="post_title text-decoration-none">{{post.title}}</a></h4>
        <p>{{post.contents}}</p>
      </div>
      <div class="col-md-4 pt-2 pb-3">
        <button id ="delButton" class="deletes btn btn-secondary btn-sm" data-id="{{post.id}}">Delete</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
<script src="/js/dashboard.js"></script>