<script src="./js/dashboard.js"></script>

<h2 class="post_title">{{title}}</h2>
  <p class="date">Written by: {{user.name}} on {{format_date date_created}}</p>
  <p>{{contents}}</p>
</div>

{{#if logged_in}}
<div>
    <form class="comment-form" data-id="{{id}}">
      <div class="mb-3">
        <label for="inputComment" class="form-label">Comment Below:</label>
        <input type="comment" class="form-control" id="inputComment">
      </div>
      <button type="submit" class="submit btn btn-secondary">Submit</button>
    </form>
</div>
{{/if}}

<h4>Comments:</h4>
{{#each comments as |comment|}}
<div class="comments">
    <p>{{comment.contents}}</p>
    <p class="date">Posted by: {{comment.user.name}} on {{format_date comment.date_created}}</p>
</div>
{{/each}}

<script src="/js/postComment.js"></script>